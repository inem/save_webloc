{
"update_url": "https://clients2.google.com/service/update2/crx",

	"name": "Save as Shortcut",
	"description": "Saves the current page as an Internet shortcut file on Windows, Mac, and Linux.",
	"icons": {	
		"16": "images/icons/save/save_16.png",
		"48": "images/icons/save/save_48.png",
		"128": "images/icons/save/save_128.png" 
	 },
	 
	"version": "1.24.660",
	"minimum_chrome_version": "21",
	"manifest_version": 2,

	"background": {
	    "scripts": ["js/background.js"],
	    "persistent": false
	},
	"browser_action": {
		"default_icon": "images/icons/save/save_38.png",
		"default_title": "Save this page as an Internet shortcut file."
	},
	

	"permissions": [
		"tabs",
		"downloads"
	]
}